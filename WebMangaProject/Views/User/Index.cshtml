@using MvcPresentationLayer.Models.User
@using MvcPresentationLayer.Models.UserModel
@model IEnumerable<UserSelectViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="custom-link" asp-action="Create">Create</a>
</p>
<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th ">
                @Html.DisplayNameFor(model => model.FavoritesCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLogin)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoritesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLogin)
            </td>
            <td>
                @Html.ActionLink("Edit","Edit","User",new { id = @item.Id },new {@class = "custom-link"})
            </td>
            <td>
                @Html.ActionLink("Delete","Delete","User",new { id = @item.Id },new {@class = "custom-link"})
            </td>
        </tr>
        }
    </tbody>
</table>
